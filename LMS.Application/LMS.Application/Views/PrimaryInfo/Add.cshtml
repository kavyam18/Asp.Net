@model LMS.Application.Models.Dto.PrimaryInfoDto
<h1>Employee Primary Informtion </h1>

<div class="container rounded border">
    <form method="post" action="Add">
        <div class="mt-3">
            <label asp-for="Employee_Id" class="form-label">Employee ID</label>
            <input type="text" class="form-control" asp-for="Employee_Id"/>
            <span asp-validation-for="Employee_Id" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Employee_Name" class="form-label">Employee Name</label>
            <input type="text" class="form-control" asp-for="Employee_Name" />
            <span asp-validation-for="Employee_Name" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="DateOfJoining" class="form-label">Date Of Joining</label>
            <input type="date" class="form-control" asp-for="DateOfJoining" />
            <span asp-validation-for="DateOfJoining" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label class="form-label">Date Of Birth</label>
            <input type="date" class="form-control" asp-for="DateOfBirth" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Email" class="form-label">Email ID</label>
            <input type="email" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="BloodGroup" class="form-label">Blood Group</label>
            <input type="text" class="form-control" asp-for="BloodGroup" />
            <span asp-validation-for="BloodGroup" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Designation" class="form-label">Designation</label>
            <input type="text" class="form-control" asp-for="Designation" />
            <span asp-validation-for="Designation" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Gender" class="form-label">Gender</label>
            <input type="text" class="form-control" asp-for="Gender" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Nationality" class="form-label">Nationality</label>
            <input type="text" class="form-control" asp-for="Nationality" />
            <span asp-validation-for="Nationality" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="EmployeeStatus" class="form-label">Employee Status</label>
            <input type="text" class="form-control" asp-for="EmployeeStatus" />
            <span asp-validation-for="EmployeeStatus" class="text-danger"></span>
        </div>
        
        <div class="mt-3 d-grid flex-column">
            <button type="submit" class="btn btn-primary">Submit</button>
            @* <a class="btn btn-secondary" href="/SecondaryInfo">Next</a> *@
        </div>
           
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}